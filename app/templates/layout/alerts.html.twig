<div class="w-full flex flex-col gap-2 flex-auto">
	{% for label,messages in app.flashes %}
		{% if label == 'notice' %}
			{% for message in messages %}
				<div class="p-2 text-sm bg-gray-200 text-gray-700 flex justify-between"><span>{{message|raw}}</span><i onclick="this.parentNode.remove();" class="cursor-pointer hover:text-gray-600 bi bi-x-square-fill"></i></div>
			{% endfor %}
		{% endif %}
		{% if label == 'success' %}
			{% for message in messages %}
				<div class="p-2 text-sm bg-green-200 text-green-700 flex justify-between"><span>{{message|raw}}</span><i onclick="this.parentNode.remove();" class="cursor-pointer hover:text-green-600 bi bi-x-square-fill"></i></div>
			{% endfor %}
		{% endif %}
		{% if label == 'warning' %}
			{% for message in messages %}
				<div class="p-2 text-sm bg-yellow-200 text-yellow-700 flex justify-between"><span>{{message|raw}}</span><i onclick="this.parentNode.remove();" class="cursor-pointer hover:text-yellow-600 bi bi-x-square-fill"></i></div>
			{% endfor %}
		{% endif %}
		{% if label == 'error' %}
			{% for message in messages %}
				<div class="p-2 text-sm bg-red-200 text-red-700 flex justify-between"><span>{{message|raw}}</span><i onclick="this.parentNode.remove();" class="cursor-pointer hover:text-red-600 bi bi-x-square-fill"></i></div>
			{% endfor %}
		{% endif %}
	{% endfor %}
</div>
